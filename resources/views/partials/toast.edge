<div class="toast-container position-fixed bottom-0 end-0 p-3">
  @if(flashMessages.has('alert.message'))
    <div class="alert alert-{{flashMessages.get('alert.type')}} alert-dismissible fade show" role="alert">
      {{flashMessages.get('alert.message')}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  @end
</div>